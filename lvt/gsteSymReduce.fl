//Rule: gsteSymReduce
//gste symmetry

let appSym2Ef f antf = (\e. symTransform f (antf e));
let appSym2Graph f g = 
	val (TGraph (Graph vertexL initV edgeL (Edge2Form antf) (Edge2Form consf))) = g
in
	TGraph (Graph vertexL initV edgeL (Edge2Form (appSym2Ef f antf)) (Edge2Form (appSym2Ef f consf)))
;

let useLemmaTGraph storedTGraph goalTGraph =
      val (TGraph (Graph vertexL initV edgeL (Edge2Form antf) (Edge2Form consf))) = goalTGraph 
in    val (TGraph (Graph svertexL sinitV sedgeL (Edge2Form santf) (Edge2Form sconsf))) = storedTGraph
in	let ant = TAndList (map antf edgeL)
in	let cons = TAndList (map consf edgeL)
in	let sant = TAndList (map santf edgeL)
in	let scons = TAndList (map sconsf edgeL)
in
	useLemmaOk (Goal [] (TImply sant scons)) [] (TImply ant cons)
;




let gsteSymReduceGoalf ckt goal inpSel =
    	val (Goal bants assert) = goal 
in	val (useLemma storedGoal isCutPoint) = inpSel 
in    val (Goal sbants sassert) = storedGoal 
in    val (TGraph (Graph vertexL initV edgeL (Edge2Form antf) (Edge2Form consf))) = assert 
in    val (TGraph (Graph svertexL sinitV sedgeL (Edge2Form santf) (Edge2Form sconsf))) = sassert 
in	
	(vertexL=svertexL) AND (initV=sinitV) AND (edgeL=sedgeL) =>
(
	let ant = TAndList (map antf edgeL)
in	let sant = TAndList (map santf edgeL) 
in	let cons = TAndList (map consf edgeL)
in	let scons = TAndList (map sconsf edgeL)
in   	let symF = matchTrFormLs [] [(ant,sant),(cons,scons)]
//in    val (T,symF) = symAnalz ckt env isCutPoint []
in 	
	printBiTab symF fseq 
      val assert0 = ([] = symF) => assert
                	 |	val symCopy = symF 						then           
                  	let checked = checkBiJection1 symF (list_keys symF) symCopy 		in
                  	let symF1 = snd checked 							in
                  	(let newgraph = (appSym2Graph symF1 assert) 	in
                   	newgraph) 
in
   	(useLemmaTGraph sassert  assert0) => []
|	error "lemma cann't be applied"
)
| error "symmetry failed!"
;

let gsteSymReduce lemma isCutPoint i st = subgoal gsteSymReduceGoalf i st (useLemma lemma isCutPoint);

//******************************************************************************************************************************************
//Rule: steSymReduce
//symmetry reduction

let symReduceGoalf ckt goal inpSel =
    	val (Goal bants assert) = goal 
in	val (useLemma storedGoal isCutPoint) = inpSel 
in    val (Goal sbants sassert) = storedGoal 
in    val (TImply ant cons) = assert 
in    val (TImply sant scons) = sassert 
in   	val env = matchTrFormLs [] [(cons,scons)] 
in    val (T,symF) = symAnalz ckt env isCutPoint []
in
	printBiTab symF
fseq 
      val assert0 = ([] = symF) => assert
                	 |	val symCopy = symF 						then           
                  	let checked = checkBiJection1 symF (list_keys symF) symCopy 		in
                  	let symF1 = snd checked 							in
                  	(val ant0 = (symTransform symF1 ant) 	in
                   	val cons0 = (symTransform symF1 cons) 	in
                   	(TImply ant0 cons0)) 
in
   	(useLemmaOk storedGoal  (bants) (assert0)) => []
|	error "lemma cann't be applied"
;

let steSymReduce lemma isCutPoint i st = subgoal symReduceGoalf i st (useLemma lemma isCutPoint);


