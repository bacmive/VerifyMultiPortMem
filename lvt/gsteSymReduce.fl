//list operations of the type: (*a,*b) list

let list_element alist akey = snd (el (find_first (\(a,b). a=akey) alist) alist);
let list_insert alist ea eb = (ea,eb):alist;
let list_keys alist = setify (map (\(a,b). a) alist);
let list_member alist akey = mem akey (list_keys alist);
let list_delete alist akey = alist subtract (filter (\(a,b). a=akey) alist);

