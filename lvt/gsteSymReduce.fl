//Rule: gsteImpI
//gste imply

let map2 fun tabA tabB = map (\(a,b). (fun a b)) (zip tabA tabB);

let gsteImpIGoalf ckt goalh inpSel=
   	val (Goal bAnts asserth) = goalh 
in    val (TGraph (Graph vertexLh initVh edgeLh (Edge2Form anth) (Edge2Form consh))) = asserth 
in	let anth = (\e. Guard (boolAndLs bAnts) (anth e))
in	let consh = (\e. Guard (boolAndLs bAnts) (consh e))
in    val ( gsteImpl goalg) = inpSel 
in    val ( Graph vertexLg initVg edgeLg (Edge2Form antg) (Edge2Form consg)) = goalg
in    (vertexLg=vertexLh) AND (initVg=initVh) AND (edgeLg=edgeLh) =>
       let goal1=Goal [] (TGraph goalg) in
       let impL1=map2 (\h. \g. TImply h g) (map anth edgeLh) (map antg edgeLg) in
       let impL2=map2 (\g. \h. TImply g h) (map consg edgeLg) (map consh edgeLh) in
       let impGL1=map (\i. Goal bAnts i)  impL1 in
       let impGL2=map (\i. Goal bAnts i)  impL2 in
      
    	[goal1]@impGL1@impGL2
    |error "GSTE graphs are not isomorphism" 	
;

let gsteImpI B i st = subgoal gsteImpIGoalf i st (gsteImpl B);


//******************************************************************************************************************************************
//Rule: gsteProd
//gste product

let gsteProdGoalf ckt goalh inpSel=
   	val (Goal bAnts asserth) = goalh 
in    val (TGraph (Graph vertexLh initVh edgeLh (Edge2Form anth) (Edge2Form consh))) = asserth 
in    val ( gsteImpl goalg) = inpSel 
in    val ( Graph vertexLg initVg edgeLg (Edge2Form antg) (Edge2Form consg)) = goalg
in    
	(vertexLg=vertexLh) AND (initVg=initVh) AND (edgeLg=edgeLh) =>
       	let goal1=Goal bAnts (TGraph goalg) in
       	let antProd = (\e. TAndList [(antg e),(anth e)])
	in	let consProd = (\e. TAndList [(consg e),(consh e)])
	in
		[Goal bAnts (TGraph (Graph vertexLh initVh edgeLh (Edge2Form antProd) (Edge2Form consProd)))]
|	
	error "GSTE graphs are not isomorphism" 	
;

let gsteProd B i st = subgoal gsteProdGoalf i st (gsteImpl B);

let ! xs i=el (i+1) xs; //element of a list
infix 6 !;
let decompseTandL (TAndList frms) = frms; 

let isProdG assert =
	val (TGraph (Graph vertices initV edges (Edge2Form ants) (Edge2Form cons))) = assert 
in	let lenOfE0 = (length (decompseTandL (ants (hd edges))))
in	
	itlist (\e.\r. (r AND (length (decompseTandL (ants e))) = lenOfE0 AND (length (decompseTandL (cons e))) = lenOfE0)) (tl edges) T
;

let gsteProdLIGoalf ckt goal inpSel =
    	val (Goal bAnts assert) = goal 
in	(isProdG assert) =>
    	val (TGraph (Graph vertices initV edges (Edge2Form ants) (Edge2Form cons))) = assert 
in	let lenOfG = (length (decompseTandL (ants (edges ! 0))))
in	let antOfGi i e = (decompseTandL  (ants e) ) ! i
in	let consOfGi i e = (decompseTandL  (cons e) ) ! i
in	let construcGi i = (TGraph (Graph vertices initV edges (Edge2Form (antOfGi i)) (Edge2Form (consOfGi i))))
in
	//print (int2str lenOfG) fseq
     	map (\i. Goal (bAnts) (construcGi i)) (0 upto (lenOfG-1))
|
	error ("the goal is not a ProdL G!")
;

let gsteProdLI i st = subgoal gsteProdLIGoalf i st None;


