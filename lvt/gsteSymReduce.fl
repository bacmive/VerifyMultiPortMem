//Rule: gSteSymbSim
//run GSTE


let boolAndLs bs=itlist (\e.\b. e bAND b) bs bT;

let gsteSymbSimGoalf ckt goal inpSel =
    	val (Goal bAnts assert) = goal 
in	val (preciseNodes binNodes) = inpSel
in    val (TGraph (Graph vertexL vertexI edgeL (Edge2Form ant) (Edge2Form cons))) = assert
in	let ant = (\e. Guard (boolAndLs bAnts) (ant e))
in	let cons = (\e. Guard (boolAndLs bAnts) (cons e))
in	let edgeListForGste = map (\aEdge. 
		val (Edge (Vertex from) (Vertex to)) = aEdge 
	in 
		(sprintf "e%d_%d" (from,to),
			(int2str from) --> (int2str to),
			assume (TRAJ (trajForm2FiveTuples (ant aEdge)) T)
			prove (TRAJ (trajForm2FiveTuples (cons aEdge)) T)
	)) edgeL
then	let ag = AG "0" edgeListForGste []
in
   	gsteOk (GSTE "-w -s " ckt binNodes [] ag) => [] //-w -s
|	error "GSTE Tatics fails"
;

let gsteSymbSim binNodes i st = subgoal gsteSymbSimGoalf i st (preciseNodes binNodes);

